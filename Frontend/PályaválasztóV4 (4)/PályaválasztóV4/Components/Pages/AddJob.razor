@page "/add-job"

<PageTitle>Add job</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save job</RadzenAlert>
        <RadzenTemplateForm TItem="PalyavalsztoV4.Models.v4_1.job" Data="@job" Visible="@(job != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Job I D" Component="JobID" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@job.JobID" Name="JobID" />
                    <RadzenRequiredValidator Component="JobID" Text="JobID is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="employer" Component="employer" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@employersForEmployerID" TextProperty="CompanyName" ValueProperty="EmployerID" AllowClear=true
                         Placeholder="Choose employer" style="display: block; width: 100%" @bind-Value="@job.EmployerID" Name="EmployerID"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Job Title" Component="JobTitle" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@job.JobTitle" Name="JobTitle" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Job Description" Component="JobDescription" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@job.JobDescription" Name="JobDescription" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Job Requirements" Component="JobRequirements" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@job.JobRequirements" Name="JobRequirements" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Job Location" Component="JobLocation" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@job.JobLocation" Name="JobLocation" />
                </RadzenColumn>
            </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Minimum Salary" Component="MinSalary" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="3">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@job.MinSalary" Name="MinSalary" />
            </RadzenColumn>
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Maximum Salary" Component="MaxSalary" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="3">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@job.MaxSalary" Name="MaxSalary" />
            </RadzenColumn>
        </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

