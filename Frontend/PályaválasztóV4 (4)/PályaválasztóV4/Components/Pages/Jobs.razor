@page "/jobs"

<PageTitle>jobs</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="jobs" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@jobs" TItem="PalyavalsztoV4.Models.v4_1.job" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="PalyavalsztoV4.Models.v4_1.job" Property="JobID" Title="Job I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalsztoV4.Models.v4_1.job" Property="employer.CompanyName" Title="employer">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalsztoV4.Models.v4_1.job" Property="JobTitle" Title="Job Title">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalsztoV4.Models.v4_1.job" Property="JobDescription" Title="Job Description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalsztoV4.Models.v4_1.job" Property="JobRequirements" Title="Job Requirements">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalsztoV4.Models.v4_1.job" Property="JobLocation" Title="Job Location">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalsztoV4.Models.v4_1.job" Property="JobSalary" Title="Job Salary">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="PalyavalsztoV4.Models.v4_1.job" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="job">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, job)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
